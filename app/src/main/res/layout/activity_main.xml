<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/ll_a"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        >

        <ImageButton
            android:id="@+id/btn_last"
            android:layout_width="50.0dip"
            android:layout_height="fill_parent"
            android:src="@drawable/home_left_menutriangle"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="2016-06-30"
                android:textColor="#ff949494"
                android:textSize="15.0sp"
                />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="50.0dip"
            android:layout_height="fill_parent"
            android:src="@drawable/home_right_menutriangle"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:text="连接设备"
        />

    <Button
        android:id="@+id/btn_step"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="计步数据"
        />

    <Button
        android:id="@+id/btn_sleep"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="睡眠数据"
        />

    <Button
        android:id="@+id/btn_startHrt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="心率测量"
        />

    <Button
        android:id="@+id/btn_Hrt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="心率数据"
        />

    <Button
        android:id="@+id/btn_startBldPrs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="血压测量"
        />

    <Button
        android:id="@+id/btn_BldPrs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="血压数据"
        />

    <Button
        android:id="@+id/btn_unitcm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="公制"
        />

    <Button
        android:id="@+id/btn_unitin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="英制"
        />

    <TextView
        android:id="@+id/tv_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CM KG"
        />
</LinearLayout>