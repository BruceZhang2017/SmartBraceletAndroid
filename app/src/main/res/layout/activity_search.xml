<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".SearchActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="#5abfff"
        android:padding="5dp" >

        <TextView
            android:id="@+id/tv_title_tt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="搜索"
            android:textColor="#000000"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/Ibtn_left"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/personal_icon_return" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- ============================================= -->

        <RelativeLayout
            android:id="@+id/rl_connectInfo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#112B211F" >

            <TextView
                android:id="@+id/tv_BtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="tjdsmart"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_BtAddr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_BtName"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text=" "
                android:textColor="#000000"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_BtSt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:text="connected"
                android:textColor="#000000"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#353334" />
        </RelativeLayout>


        <ListView
            android:layout_below="@+id/rl_connectInfo"
            android:layout_marginTop="10dp"
            android:id="@+id/lv_bt_dev"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scrollbars="none" />


        <RelativeLayout
            android:id="@+id/rl_block_step_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Search"
                android:textColor="#000000" />

        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>