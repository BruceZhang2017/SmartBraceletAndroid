<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_corner_10"
    >
    <com.shehuan.niv.NiceImageView
        android:id="@+id/iv_device"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:background="@mipmap/produce_image_no"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:is_circle="true"
        />
    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff333333"
        android:textSize="16sp"
        android:text="ITIME"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@id/iv_device"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="19dp"/>
    <TextView
        android:id="@+id/tv_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff999999"
        android:textSize="11sp"
        android:text="蓝牙未连接"
        android:layout_marginLeft="8dp"
        android:drawableLeft="@mipmap/content_blueteeth_unlink"
        android:drawablePadding="8dp"
        app:layout_constraintLeft_toRightOf="@id/iv_device"
        app:layout_constraintTop_toBottomOf="@id/tv_device_name"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff999999"
        android:textSize="11sp"
        android:text="剩余电量未知"
        android:layout_marginLeft="8dp"
        android:drawableLeft="@mipmap/conten_battery_null"
        android:drawablePadding="8dp"
        app:layout_constraintLeft_toRightOf="@id/iv_device"
        app:layout_constraintTop_toBottomOf="@id/tv_bt"
        android:layout_marginTop="3dp"/>
    <ImageView
        android:id="@+id/iv_shezhi"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:src="@mipmap/shezhi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_add_device"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#ff333333"
        android:background="#ffffffff"
        android:gravity="center"
        android:textSize="12sp"
        android:text="添加设备"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>