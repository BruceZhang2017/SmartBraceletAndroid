<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.health.data.fitday.main.HomeActivity"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/simple_action_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageButton
            android:id="@+id/ib_search"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="15dp"
            android:background="@mipmap/nav_icon_add_normal"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="15dp"
            android:textSize="18sp"
            android:text="健康"
            android:textColor="#ff333333"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/alphaIndicator"
        app:layout_constraintTop_toBottomOf="@id/simple_action_bar"
        />

    <com.health.data.fitday.main.widget.AlphaTabsIndicator
        android:id="@+id/alphaIndicator"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <com.health.data.fitday.main.widget.AlphaTabView
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:padding="5.0dip"
            app:tabIconNormal="@mipmap/tab_icon_health_default"
            app:tabIconSelected="@mipmap/tab_icon_health_highlight"
            app:tabText="健康"
            app:tabTextSize="13.0sp"
            app:textColorNormal="@color/colorTabNormal"
            app:textColorSelected="@color/colorTabSelected"
            />

<!--        <com.health.data.fitday.main.widget.AlphaTabView-->
<!--            android:layout_width="0.0dip"-->
<!--            android:layout_height="fill_parent"-->
<!--            android:layout_weight="1.0"-->
<!--            android:padding="5.0dip"-->
<!--            app:tabIconNormal="@mipmap/tab_icon_sport_default"-->
<!--            app:tabIconSelected="@mipmap/tab_icon_sport_highlight"-->
<!--            app:tabText="运动"-->
<!--            app:tabTextSize="13.0sp"-->
<!--            app:textColorNormal="@color/colorTabNormal"-->
<!--            app:textColorSelected="@color/colorTabSelected"-->
<!--            />-->

        <com.health.data.fitday.main.widget.AlphaTabView
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:padding="5.0dip"
            app:tabIconNormal="@mipmap/tab_icon_equipment_default"
            app:tabIconSelected="@mipmap/tab_icon_equipment_highlight"
            app:tabText="设备"
            app:tabTextSize="13.0sp"
            app:textColorNormal="@color/colorTabNormal"
            app:textColorSelected="@color/colorTabSelected"
            />

        <com.health.data.fitday.main.widget.AlphaTabView
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:padding="5.0dip"
            app:tabIconNormal="@mipmap/tab_icon_user_default"
            app:tabIconSelected="@mipmap/tab_icon_user_highlight"
            app:tabText="我的"
            app:tabTextSize="13.0sp"
            app:textColorNormal="@color/colorTabNormal"
            app:textColorSelected="@color/colorTabSelected"
            />
    </com.health.data.fitday.main.widget.AlphaTabsIndicator>
</androidx.constraintlayout.widget.ConstraintLayout>