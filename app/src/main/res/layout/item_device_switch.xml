<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_head"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/drawable_border_corner_4"
        >
        <com.shehuan.niv.NiceImageView
            android:id="@+id/iv_device"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@mipmap/produce_image_no"
            android:layout_marginLeft="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:is_circle="true"
            />
        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff333333"
            android:textSize="16sp"
            android:text="ITIME"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toRightOf="@id/iv_device"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/tv_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff999999"
            android:textSize="11sp"
            android:text="蓝牙已连接"
            android:layout_marginLeft="8dp"
            android:drawableLeft="@mipmap/content_blueteeth_link"
            android:drawablePadding="8dp"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@id/iv_device"
            app:layout_constraintTop_toBottomOf="@id/tv_device_name"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff999999"
            android:textSize="11sp"
            android:text="剩余电量88%"
            android:layout_marginLeft="18dp"
            android:drawableLeft="@mipmap/conten_battery_full"
            android:drawablePadding="8dp"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@id/tv_bt"
            app:layout_constraintTop_toTopOf="@id/tv_bt"/>
        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="12dp"
            android:src="@mipmap/content_icon_select"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_add_device"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible">
        <TextView
            android:id="@+id/tv_add_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="20sp"
            android:textColor="#ff14C8C6"
            android:text="添加新设备"
            android:drawableLeft="@mipmap/content_icon_add"
            android:drawablePadding="5dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>